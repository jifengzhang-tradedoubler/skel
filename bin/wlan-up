#!/bin/bash

IF=wlan1

if [ -z "$SSID" ] ; then
    SSID=D3E1F4
fi

try () {
    echo $@
    $@
    ERR=$?
    if [[ 0 != $ERR ]] ; then
	exit $ERR
    fi
}

try ifconfig $IF up
try killall wpa_supplicant
try wpa_supplicant -B -c /etc/wpa_supplicant/wpa_supplicant.conf -i$IF
try iwconfig $IF essid $SSID
try dhclient $IF
