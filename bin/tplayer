#!/bin/bash

echo "$(tput setaf 3)mplayer-ffmpeg-mt should use: -lavdopts threads=N$(tput sgr0)"

if [ -z $MPLAYER ]; then
#    MPLAYER="/home/kjell/src/mplayer/r29404/mplayer"
    MPLAYER=mplayer
fi
SPDIF="-ao alsa:device=spdif -afm hwac3 "
DIGITAL_REGEX=".*d"
if [[ $0 =~ $DIGITAL_REGEX ]]; then
    AUDIO_DECODER=$SPDIF
else
    AUDIO_DECODER=
fi

if [[ $0 =~ "splayer" ]]; then
    AUDIO_DECODER="-nosound"
fi

if [[ $0 =~ "vdpau" ]]; then
    CMD="/mnt/raid/kjell/src/mplayer/mplayer-090430/mplayer $SPDIF -vo vdpau -vc ffh264vdpau -display :0.2 -monitoraspect 16:9"
else
    CMD="$MPLAYER -stop-xscreensaver $AUDIO_DECODER "
fi

echo "$CMD $@"
$CMD "$@"
