#!/bin/sh

FIND_ROOT="$TC_SRC_HOME"
UNWANTED="-name .hg -prune"

while getopts "d:f:" opt ; do
    case $opt in
        d) FIND_ROOT="$OPTARG" ;;
        f) FILE_FILTER="$FILE_FILTER ${FILE_FILTER:+-o} -name $OPTARG" ;;
    esac
done

find_grep () {
    find $FIND_ROOT $UNWANTED -o \( $FILE_FILTER -print0 \) | xargs -0 grep --color -d skip -Pin "$@"
}

find_grep_recur () {
    find $FIND_ROOT $UNWANTED -o \( $FILE_FILTER -print0 \) | xargs -0 grep -d skip -Zl "$1" | xargs -0 grep --color -d skip -Pin "$2"
}

shift `expr $OPTIND - 1`

if [ $# -gt 1 ] ; then
    find_grep_recur "$1" "$2"
else
    find_grep "$@"
fi
