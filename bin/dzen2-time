#!/bin/sh

TIMEOUT=1
TIMEBAR_WIDTH=180
DZEN_OPTS=" -fn -misc-fixed-medium-r-semicondensed-*-13-120-75-75-c-60-iso8859-* -bg #044084"

get_time () {
    while :; do
	DATE=$(date +"%a w%V %Y-%m-%d %H:%M:%S")
	echo "^fg(orange)$DATE^fg()"
	sleep $TIMEOUT
    done
}

get_time | dzen2 -xs 1 -w $TIMEBAR_WIDTH -ta l $DZEN_OPTS
