#!/bin/bash

if [[ "$1" == "" ]] ; then
    BACKUP_DIR=/mnt/backup/$LOGNAME/home/backup
else
    # backup_home /mnt/tmp/kjell/backup/home
    # places kjean part of /home/kjean in /mnt/tmp/kjell/backup/home.X/kjean
    if [[ $1 =~ [^/]+/$ ]] ; then
	echo "Backup dir ends with a '/', are you sure you want to do that?"
	exit 1
    fi
    BACKUP_DIR=$1
fi

BACKUP_SOURCE_DIR=$HOME
EXCLUDES=$HOME/.skel/rsync_excludes

BACKUPS=8
rm -rf $BACKUP_DIR.$BACKUPS
for (( i=$BACKUPS ; i > 0 ; i=i-1 )) ; do
    mv $BACKUP_DIR.$(( $i-1 )) $BACKUP_DIR.$i
done
mkdir -p $BACKUP_DIR.0

rsync --archive --one-file-system --hard-links --human-readable --inplace \
    --numeric-ids --delete --delete-excluded --exclude-from=$EXCLUDES \
    --link-dest=$BACKUP_DIR.1 $BACKUP_SOURCE_DIR $BACKUP_DIR.0
