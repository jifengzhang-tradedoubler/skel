#!/bin/bash

export TERM=xterm
if [ "$1" == "12" ] ; then
    shift
    DYALOG=/opt/mdyalog/12.1/32/classic/mapl
elif [ "$1" == "13" ] ; then
    shift
    DYALOG=/usr/bin/dyalog
else
    echo "Parameter for version to start required (e.g. $0 12)"
    exit 1
fi

echo "Executing $DYALOG $@"
$DYALOG $@

echo "To reset the keyboard mapping, execute 'setxkbmap -option -option ctrl:nocaps'"
