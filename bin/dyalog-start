#!/bin/bash

export TERM=xterm
if [ "$1" == "12" ] ; then
    shift
    /opt/mdyalog/12.1/32/classic/mapl $@
elif [ "$1" == "13" ] ; then
    shift
    /usr/bin/dyalog $@
else
    echo "Parameter for version to start required (e.g. $0 12)"
fi

echo "To reset the keyboard mapping, execute 'setxkbmap -option -option ctrl:nocaps'"
